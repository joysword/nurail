<?xml version="1.0" encoding="UTF-8"?>
<StyledLayerDescriptor xmlns="http://www.opengis.net/sld" xmlns:ogc="http://www.opengis.net/ogc" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0.0" xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd">
  <!-- a Named Layer is the basic building block of an SLD document -->
  <NamedLayer>
    <Name>water</Name>
    <UserStyle>
      <!-- Styles can have names, titles and abstracts -->
      <Title>water layer</Title>
      <Abstract>a style that draws a polygon for water layer</Abstract>
      <!-- FeatureTypeStyles describe how to render different features -->
      <!-- A FeatureTypeStyle for rendering polygons -->
      <FeatureTypeStyle>
        <Rule>
          <Name>rule1</Name>
          <Title>water polygon</Title>
          <Abstract>a polygon with a #97DBF2 fill and a 1 pixel #97DBF2 outline</Abstract>
          <PolygonSymbolizer>
            <Fill>
              <CssParameter name="fill">#97DBF2</CssParameter>
              <CssParameter name="fill-opacity">0.3</CssParameter>
            </Fill>
            <Stroke>
              <CssParameter name="stroke">#97DBF2</CssParameter>
            </Stroke>
          </PolygonSymbolizer>
        </Rule>
      </FeatureTypeStyle>
    </UserStyle>
  </NamedLayer>
</StyledLayerDescriptor>

